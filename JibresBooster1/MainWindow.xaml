<Window x:Class="JibresBooster1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JibresBooster1"
        mc:Ignorable="d"
        Title="Jibres Booster 1" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.484,0.506">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="396*"/>
            <ColumnDefinition Width="63*"/>
            <ColumnDefinition Width="125*"/>
            <ColumnDefinition Width="195*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnJibresWebsite" Content="Jibres website" Grid.Column="4" HorizontalAlignment="Left" Margin="27,358,0,0" VerticalAlignment="Top" Width="127" Height="32" Click="btnJibresWebsite_Click"/>
        <RichTextBox x:Name="logText" Grid.Column="1" HorizontalAlignment="Left" Height="224" Margin="10,166,0,0" VerticalAlignment="Top" Width="564" Grid.ColumnSpan="3" Focusable="False" IsTabStop="False" AllowDrop="False">
            <FlowDocument>
                <Paragraph>
                    <Run Text="Jibres is amazing..."/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Label x:Name="label" Content="Logs" Grid.Column="1" HorizontalAlignment="Left" Margin="10,135,0,0" VerticalAlignment="Top" Grid.ColumnSpan="3" Width="564"/>
        <Image x:Name="image" Grid.Column="4" HorizontalAlignment="Left" Height="124" Margin="27,197,0,0" VerticalAlignment="Top" Width="124" Source="images/ermile.png"/>
        <Button x:Name="btnIranKishTest" Content="ایران کیش" Grid.Column="1" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Width="75" Click="btnIranKishTest_Click"/>
        <Button x:Name="btnIranKishTest_Copy" Content="ایران کیش" Grid.Column="1" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>

    </Grid>
</Window>
