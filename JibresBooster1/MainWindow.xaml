<Window x:Class="JibresBooster1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JibresBooster1"
        mc:Ignorable="d"
        Title="Jibres Booster 1" Height="450" Width="800" ResizeMode="NoResize" Icon="images/favicon.ico" WindowStartupLocation="CenterScreen" AllowsTransparency="True" WindowStyle="None">
    <Window.Background>
        <SolidColorBrush Color="White" Opacity="0"/>
    </Window.Background>
    <Grid RenderTransformOrigin="0.484,0.506" Margin="0,100,0,0" Background="#fff">
        <RichTextBox x:Name="logText" HorizontalAlignment="Left" Height="155" Margin="10,166,0,0" VerticalAlignment="Top" Width="564" Focusable="False" IsTabStop="False" AllowDrop="False">
            <FlowDocument>
                <Paragraph>
                    <Run Text="Jibres is amazing..."/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="btnIranKishTest" Content="ایران کیش" HorizontalAlignment="Left" Margin="125,45,0,0" VerticalAlignment="Top" Width="75" Click="BtnIranKishTest_Click"/>
        <Button x:Name="btnFaxModem" Content="تست مودم" HorizontalAlignment="Left" Margin="125,78,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.533,0.5" Click="BtnFaxModem_Click"/>
        <Image x:Name="imgLogo" HorizontalAlignment="Left" Height="174" Margin="316,-90,0,0" VerticalAlignment="Top" Width="174" Source="images/jibres.png" Cursor="Cross" MouseDown="ImgLogo_MouseDown"/>

    </Grid>
</Window>
